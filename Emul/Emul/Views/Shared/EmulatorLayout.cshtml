<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="~/Content/stylesheet.css" rel="stylesheet" />
</head>

<body>
    <div>
        @Html.Partial("Navbar")
    </div>
    <div class="layout_block">
        <form method="post">
            <div class="input-group mb-3">
                <select class="form-control" name="Pair">
                    <option value="BTC">USDT-BTC</option>
                    <option value="XRP">USDT-XRP</option>
                    <option value="ETH">USDT-ETH</option>
                </select>
                <input type="date" class="form-control" name="StartDate" value="" />
                <input type="date" class="form-control" name="EndDate" value="" />
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text span_emulator">Diff</span>
                </div>
                <input type="text" name="diff" class="form-control" value="1,1">
                <div class="input-group-append">
                    <span class="input-group-text span_emulator">%</span>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text span_emulator">Check Diff</span>
                </div>
                <input type="text" name="checkDiff" class="form-control" value="60">
                <div class="input-group-append">
                    <span class="input-group-text span_emulator">сек.</span>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text span_emulator">Check Time</span>
                </div>
                <input type="text" name="checkTime" class="form-control" value="5">
                <div class="input-group-append">
                    <span class="input-group-text span_emulator">мин.</span>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text span_emulator">Buy Time</span>
                </div>
                <input type="text" name="buyTime" class="form-control" value="5">
                <div class="input-group-append">
                    <span class="input-group-text span_emulator">мин.</span>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text span_emulator">Hold Time</span>
                </div>
                <input type="text" name="holdTime" class="form-control" value="20">
                <div class="input-group-append">
                    <span class="input-group-text span_emulator">мин.</span>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text span_emulator">Balance</span>
                </div>
                <input type="text" name="balance" class="form-control" value="1000000">
                <div class="input-group-append">
                    <span class="input-group-text span_emulator">$</span>
                </div>
            </div>
            <button style="width:100%" type="submit" class="btn btn-secondary"  name="startEmulation" value="Запуск" formaction="../Emulator/Emulation" formmethod="post">Запуск</button>

        </form>
    </div>
    @RenderBody()
</body>
</html>