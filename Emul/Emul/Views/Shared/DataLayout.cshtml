<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
</head>



<body>
    <button>@Html.ActionLink("Home", "Index", "Home")</button>
    <form method="post">
        <select name="Pair">
            <option value="BTC">USDT-BTC</option>
            <option value="XRP">USDT-XRP</option>
            <option value="ETH">USDT-ETH</option>
        </select>
        <input type="date" name="StartDate">
        <input type="date" name="EndDate">
        </br>

        <style type="text/css">
            .container {
                height: 100px;
                width: 750px;
            }

            .left {
                float: left;
                width: 250px;
            }

            .right {
                float: right;
                width: 250px;
            }
        </style>

        <div class="container">
            <div class="left">
                <fieldset>
                    <legend>Show</legend>
                    <input type="submit" name="showTradeHistory" value="Trade History" formaction="../Show/ShowTradeHistiories" formmethod="post" />
                </fieldset>
            </div>
            <div class="right">
                <fieldset>
                    <legend>Download</legend>
                    <label for="MinValue">Минимальное заносимое значение Total:</label><br />
                    <input type="text" name="MinValue" value="500" />$
                    <input type="submit" name="downloadTradeHistory" value="Trade History" formaction="../Download/TradeHistoryDownload" formmethod="post" />
                </fieldset>
            </div>
            <div class="right">
                <fieldset>
                    <legend>Clear</legend>
                    <input type="submit" name="downloadTradeHistory" value="Trade History" formaction="../Clear/ClearTradeHistory" formmethod="post" />
                </fieldset>
            </div>
        </div>


        

        

    </form>

    @RenderBody()
</body>
</html>